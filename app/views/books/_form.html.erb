  </div>

   <div>
    <%= form.label :language, style: "display: block"%>
    <%= form.text_field :language , class: "mb-5" %>
  </div>



  <div>
    <%= form.number_field :user_id, required: true, class: 'form-control', type: :hidden , value:current_user.id if current_user   %>
  </div>


<div>
<%= form.label :library_name, style: "display: block"%>
<%= form.select(:library_name, @library , :class => 'my_style_class', required: true )%>
</div>

  <div>
  <br>
    <%= form.submit %>
  </div>
<% end %>


</div>