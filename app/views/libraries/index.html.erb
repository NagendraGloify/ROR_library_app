<p style="color: green"><%= notice %></p>
<h1>libraries</h1>
<div id="libraries">
<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Library name</th>
      <th scope="col">User name</th>
      <th scope="col">Created Date</th>
      <th scope="col">Updated Date</th>
      <th scope="col">View</th>
    </tr>
  </thead>
  <tbody>
<% i=1 %>
  <% @libraries.each do |library| %>  
<% # if book.user_id == current_user.id %>
      <tr>
      <th scope="row"> <%= i %> </th>
       <td> <%=  library.library_name %></td>
      <td><%= library.user_id %> </td>
      <td> <%= library.created_at %> </td>
      <td> <%= library.updated_at %> </td>
      <td>   <%= link_to "Show this library", library , class: "btn btn-success btn-sm " %> </td>
    </tr>
    <% i=i+1 %>
  <% #end %>
  <% end %>
</div>
<% if user_signed_in? %>
<%= link_to "Add New library", new_library_path , class: "btn btn-success btn-sm mb-5" %>
<% end %>

</tbody>
</table>